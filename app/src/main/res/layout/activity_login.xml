<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.training.Medianet.LoginActivity">

    <LinearLayout
        android:layout_above="@+id/btnlogin"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lay_name"
                android:background="@color/greyalpha2">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/account"
                    android:id="@+id/iconperson"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:background="@color/greyalpha"/>


                <EditText
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black_1000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Username"
                    android:id="@+id/edtname"
                    android:textColorHint="@color/black_1000"
                    android:background="@color/greyalpha2"
                    android:padding="5dp"
                    android:paddingTop="10dp"
                    android:inputType="textAutoComplete"
                    android:ems="10"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/lay_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relativeLayout3"
                android:padding="0dp"
                android:background="@color/greyalpha2">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:maxHeight="40dp"
                    android:maxWidth="42dp"
                    android:src="@drawable/lock"
                    android:background="@color/greyalpha"
                    android:layout_gravity="center"
                    android:id="@+id/iconlock"
                    android:scaleType="centerInside"
                    android:layout_alignTop="@+id/edtpass" />

                <EditText
                    android:paddingLeft="5dp"
                    android:paddingBottom="0dp"
                    android:background="@color/greyalpha2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:textColor="@color/black_1000"
                    android:ems="10"
                    android:id="@+id/edtpass"
                    android:hint="Password"
                    android:textColorHint="@color/black_1000" />

            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:text="LOGIN"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_1000"
        android:id="@+id/btnlogin"
        android:background="@drawable/ripple_anim"
        android:layout_marginBottom="25dp" />
</RelativeLayout>
