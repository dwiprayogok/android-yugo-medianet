<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyalpha"
    >


    <ScrollView
        android:id="@+id/content_cust"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent">



            <RelativeLayout
                android:padding="15dp"
                android:layout_below="@+id/lay_tool"
                android:id="@+id/content_fab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:theme="@style/MyEditText"
                    >

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Name"
                        android:inputType="text"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </android.support.design.widget.TextInputLayout>







                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/input_layout_name"
                    android:id="@+id/input_layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:theme="@style/MyEditText">

                    <EditText
                        android:inputType="textMultiLine"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:hint="Address"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/content_fab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/saveinsert"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:textColor="@color/black_1000"
                    />


            </RelativeLayout>







        </RelativeLayout>









    </ScrollView>





</RelativeLayout>